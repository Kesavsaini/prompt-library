---
import Layout from "../layouts/Layout.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { getCollection } from "astro:content";
import PromptCard from "../components/PromptCard.astro";

const prompts = (await getCollection("prompts")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<div class="space-y-8">
		<section class="text-center py-20 relative overflow-hidden">
			<div
				class="absolute inset-0 bg-gradient-to-tr from-brand-primary/20 to-brand-secondary/20 blur-3xl -z-10"
			>
			</div>
			<p
				class="text-5xl md:text-7xl font-bold bg-clip-text bg-gradient-to-r from-brand-primary to-brand-secondary mb-6 tracking-tight"
			>
				Browse Prompts
			</p>
		</section>

		<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{prompts.map((prompt) => <PromptCard prompt={prompt} />)}
		</section>
	</div>
</Layout>
