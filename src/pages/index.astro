---
import Layout from "../layouts/Layout.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<div class="space-y-8">
		<section class="text-center py-20 relative overflow-hidden">
			<div
				class="absolute inset-0 bg-gradient-to-tr from-brand-primary/20 to-brand-secondary/20 blur-3xl -z-10"
			>
			</div>
			<h1
				class="text-5xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-brand-primary to-brand-secondary mb-6 tracking-tight"
			>
				{SITE_TITLE}
			</h1>
			<p
				class="text-xl md:text-2xl text-slate-300 max-w-2xl mx-auto mb-10 leading-relaxed"
			>
				{SITE_DESCRIPTION}
			</p>
			<div class="flex justify-center gap-4">
				<a
					href="/prompt-library/prompts"
					class="px-8 py-4 bg-brand-primary hover:bg-brand-primary/90 text-white rounded-xl font-medium transition-all shadow-lg hover:shadow-brand-primary/25"
				>
					Browse Prompts
				</a>
				<a
					href="https://github.com/keshav/prompt-library"
					target="_blank"
					class="px-8 py-4 bg-slate-800 hover:bg-slate-700 text-white rounded-xl font-medium transition-all border border-slate-700"
				>
					GitHub
				</a>
			</div>
		</section>

		<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<!-- Categories will be dynamic later -->
			<div
				class="glass-card p-6 rounded-2xl hover:scale-[1.02] transition-transform cursor-pointer group"
			>
				<h3
					class="text-xl font-bold mb-2 group-hover:text-brand-primary transition-colors"
				>
					Coding
				</h3>
				<p class="text-slate-400">
					Prompts for software development and debugging.
				</p>
			</div>
			<div
				class="glass-card p-6 rounded-2xl hover:scale-[1.02] transition-transform cursor-pointer group"
			>
				<h3
					class="text-xl font-bold mb-2 group-hover:text-brand-secondary transition-colors"
				>
					Writing
				</h3>
				<p class="text-slate-400">
					Creative writing and content generation prompts.
				</p>
			</div>
			<div
				class="glass-card p-6 rounded-2xl hover:scale-[1.02] transition-transform cursor-pointer group"
			>
				<h3
					class="text-xl font-bold mb-2 group-hover:text-purple-400 transition-colors"
				>
					Productivity
				</h3>
				<p class="text-slate-400">
					Boost your workflow with these AI assistants.
				</p>
			</div>
		</section>
	</div>
</Layout>
